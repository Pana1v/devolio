---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Ava from '@src/assets/img/ava.jpg';
import Prose from '../components/Prose.astro';

---

<BaseLayout class="container mx-auto py-12">
  <h1 class="text-3xl font-bold mb-6">Photos & Videos</h1>
  <p class="mb-8">A collection of my favorite moments, projects, and adventures in photos and videos. (You can update this section with your own content!)</p>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Example photo/video cards -->
    <div class="bg-white dark:bg-zinc-800 rounded-lg shadow p-4">
      <img src="/blog-placeholder-1.jpg" alt="Sample Photo" class="rounded mb-2" />
      <div class="text-sm text-zinc-600 dark:text-zinc-300">Robotics Lab, 2024</div>
    </div>
    <div class="bg-white dark:bg-zinc-800 rounded-lg shadow p-4">
      <video controls class="rounded mb-2">
        <source src="/sample-video.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
      <div class="text-sm text-zinc-600 dark:text-zinc-300">Demo: Autonomous Robot</div>
    </div>
    <!-- Add more photos/videos as needed -->
  </div>
</BaseLayout>

